<div class="bg-white shadow sm:rounded-lg mb-4 flex flex-row">
  <%= image_tag user_avatar(tweet.user), class: "inline-block mt-4 ml-4 h-12 w-12 rounded-full" %>
  <div class="px-4 py-5 sm:p-5 w-full">
    <h3 class="text-lg leading-6 font-medium text-gray-900">
      <%= tweet.user.nickname %>
    </h3>
    <div class="mt-2 text-sm leading-5 text-gray-500 markdown">
      <%= markdown tweet.body %>
    </div>
  </div>
</div>
